<% if (style==="darkly") { %>
<% include header_darkly.ejs %>
<% } else { %>
<% include header_united.ejs %>
<% } %>

<div class="top-content" ng-controller="userController">
    <% include ./functions/navbar.ejs %>
    <div class="inner-bg">
        <div class="container">
            <div class="row">
                <div class="col-sm-8 col-sm-offset-2 text">
                    <h1>MODEL VIEW</h1>
                    <div class="description">
                        <p>
                            COME ON, ENJOY THE TUTORIAL, CREATE SOME YOUR OWN TOPICS INSIDE!
                        </p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6 col-sm-offset-3 form-box">
                    <div class="form-top">
                        <div class="form-top-left">
                            <h3>Login to our site</h3>
                            <p>Enter your UID and password to log on:</p>
                        </div>
                        <div class="form-top-right">
                            <i class="glyphicon glyphicon-log-in"></i>
                        </div>
                    </div>
                    <div class="form-bottom">
                        <form role="form" class="login-form">
                            <div class="form-group">
                                <label class="sr-only" for="form-username">UID</label>
                                <input type="text" name="form-username" ng-model="user.name"
                                       placeholder="UID..." class="form-username form-control" id="form-username">
                            </div>
                            <div class="form-group">
                                <label class="sr-only" for="form-password">Password</label>
                                <input type="password" name="form-password" ng-model="user.password"
                                       placeholder="Password..." class="form-password form-control" id="form-password">
                            </div>
                            <p>
                                <button class="btn btn-primary" ng-click="login()">LOGIN IN</button>
                            </p>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<% include footer.ejs %>