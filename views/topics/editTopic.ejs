<% if (style==="darkly") { %>
<% include ../header_darkly.ejs %>
<% } else { %>
<% include ../header_united.ejs %>
<% } %>

<div class="row" ng-controller="editTopicController" ng-init="loadEditTopic('<%=topicName%>')" >
    <% include ../functions/navbar.ejs %>

    <div class="container">
        <div class="col-md-12">
            <div class="well">
                <form class="form-horizontal">
                    <fieldset>
                        <legend>{{legend}}</legend>
                        <div class="form-group">
                            <label for="inputTopic" class="col-md-2 control-label">TITLE</label>
                            <div class="col-md-10">
                                <input type="text" class="form-control" name="title" id="title" ng-model="formData.title" placeholder="Input your title here..">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputTopic" class="col-md-2 control-label">DESCRIPTOIN</label>
                            <div class="col-md-10">
                                <input type="text" class="form-control" name="description" id="description" ng-model="formData.description" placeholder="Input your description here..">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="textArea" class="col-md-2 control-label">USERCASE</label>
                            <div class="col-md-10">
                                <textarea name="userCase" id="userCase"></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="extraupload" class="col-md-2 control-label">STEPS</label>
                            <div class="col-md-8">
                                <div id="extraupload">Upload</div>
                            </div>
                            <div class="col-md-2">
                                <input type="button" class="btn btn-success btn-sm" id="extrabutton" value="Start Upload" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-10 col-md-offset-2">
                                <button type="reset" class="btn btn-default">Cancel</button>
                                <button type="submit" class="btn btn-primary" ng-click="processForm()">Submit</button>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div> <!--col-md-12-->
    </div>
</div>
<% include ../footer.ejs %>