<% if (style==="darkly") { %>
<% include ../header_darkly.ejs %>
<% } else { %>
<% include ../header_united.ejs %>
<% } %>

<div ng-controller="entitiesController" ng-init="loadEntities()">
    <% include ../functions/navbar.ejs %>
        <div class="container">
            <ul class="breadcrumb">
                <li><a href="/">Home</a></li>
                <li class="active">Entities</li>
            </ul>
            <div class="row">
                <div class="col-xs-3 col-lg-2" ng-repeat="entity in entities | filter:collectionFilter | orderBy:'-views'">
                    <p>
                        <div class="half-unit" ng-class="{'half-unit-hover':hovering}" ng-mouseover="hovering=true"
                             ng-mouseleave="hovering=false" ng-click="go(entity.entityName)">
                            <dtitle title="Owner">{{entity.createUserName}}</dtitle>
                            <hr>
                            <div class="cont">
                                <p><bold>{{entity.entityName}}</bold></p>
                                <p>
                                    <div class="progress">
                                        <div class="progress-bar" role="progressbar" ng-style="{'width': entity.views*100/380 + '%' }">
                                        </div>
                                    </div>
                                </p>
                            </div>
                        </div>
                    </p>
                </div>
            </div>
    </div>
</div>
<% include ../footer.ejs %>
